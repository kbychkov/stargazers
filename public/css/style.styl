html
  font 18px "Signika", sans-serif

body
  padding 64px
  color #333

a
  color #666

.container
  max-width 960px
  margin 0 auto

.logo
  margin-bottom 64px
  font-size 2.5rem
  font-weight 700
  text-align center

  a
    color inherit
    text-decoration none

.gh-url
  display flex
  border 2px solid #666
  border-radius 8px
  overflow hidden

  input
    width 100%
    padding 16px
    border none
    font inherit

    &:focus
      outline none

  button
    padding 16px
    border none
    background transparent
    font inherit
    cursor pointer

    svg
      display block
      width 16px
      height 16px
      fill #333

.chart-title
  margin-top 0
  margin-bottom 32px
  font-size 1rem
  font-weight 400
  text-align center

.ct-series-a
  .ct-line
    stroke #333
    stroke-width 2px

  .ct-area
    fill #333

.loading
  display flex
  justify-content center
  align-items center
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  font-weight 700
