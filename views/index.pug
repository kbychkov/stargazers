extends layout

block scripts
  script.
    (() => {
      const form = document.getElementById('form');
      const url = form.querySelector('input');

      form.addEventListener('submit', event => {
        const result = url.value.match(/(?:github\.com[/])?([\w-]+)\/([\w\.-]+)/i);
        if (result && result.length === 3) {
          window.location = `/${result[1]}/${result[2]}`;
        }
        event.preventDefault();
      });
    })();

block content
  form#form
    .gh-url
      input(type='text', placeholder='Enter a GitHub repo\'s URL here')
      button(type='submit')
